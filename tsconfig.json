{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    // Temporarily skipping as Jest types does not match
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": [".jest/expect.d.ts", "src"],
  "exclude": ["dist", "node_modules", "scripts"]
}
