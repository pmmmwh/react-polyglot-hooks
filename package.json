{
  "name": "react-polyglot-hooks",
  "version": "0.5.0",
  "description": "Hooks for using Polyglot.js with React.",
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "airbnb",
    "polyglot",
    "i18n",
    "internationalization",
    "internationalisation",
    "translate",
    "translation"
  ],
  "author": "Michael Mok",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pmmmwh/react-polyglot-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/pmmmwh/react-polyglot-hooks/issues"
  },
  "homepage": "https://github.com/pmmmwh/react-polyglot-hooks#readme",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --report-unused-disable-directives \"**/*.{js,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml}\"",
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "release": "yarn build && standard-version",
    "test": "node scripts/test.js",
    "type-check": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "node-polyglot": "^2.4.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/node-polyglot": "^2.4.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^27.0.2",
    "codecov": "^3.7.2",
    "eslint": "^7.6.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^7.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.0.1",
    "prettier": "^2.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "standard-version": "^9.0.0",
    "typescript": "4.5.2"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "engines": {
    "node": ">=10"
  },
  "sideEffects": false
}
